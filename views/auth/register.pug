extends ../layout

block content
  form.form-signin(action="/register" method="post")
    .text-center.mb-4
      h1.h3.mb-3.font-weight-normal Sign up 
    .form-label-group
      input#inputUser.form-control(type='text' name='username' placeholder='Username' required='' autofocus='' value=user?user.username:'')
    .form-label-group
      input#inputEmail.form-control(type='email' name='email' placeholder='Email' required='')
    .form-label-group
      input#inputPassword.form-control(type='password' name='password' placeholder='Password' required='')
    .form-label-group
      input#inputpasswordConfirmar.form-control(type='password' name='passwordConfirmar' placeholder='Confirmar Password' required='')
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Register
    .footer-copyright.text-center.py-3
      | &copy; 2018 Copyright:
      a(href='')  Quathfiles.com
